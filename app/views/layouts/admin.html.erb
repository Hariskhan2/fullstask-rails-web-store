<!DOCTYPE html>
<html>
  <head>
    <title>Dukan</title>
    <link rel="icon" type="image/png" href="<%= asset_path('logo.png') %>">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main class="flex">
        <nav class="flex">
            <div class="w-64 p-4 h-screen bg-gray-600 sticky top-0">
                <div class="flex">
                    <%= image_tag 'logo.png' ,class: 'w-16'%>
                    <h1 class="text-md py-2 text-gray-50 font-bold hidden md:block">Ecommerce  Admin</h1>
                </div>
                <ul>
                    <li>
                        <%= link_to admin_path, :class => "block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                            <%= icon('fa-solid', 'gauge-high', class: 'mr-3 text-white') %>
                            <span class="hidden md:inline-block text-white"> Dashboard</span>
                        <% end %> 
                    </li>
                    <li>
                        <%= link_to admin_products_path, :class => "block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                            <%= icon('fa-solid', 'cart-shopping', class: 'mr-3 text-white') %>
                            <span class="hidden md:inline-block text-white"> Products</span>
                        <% end %> 
                    </li><li>
                        <%= link_to admin_categories_path, :class => "block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                            <%= icon('fa-solid', 'list', class: 'mr-3 text-white') %>
                            <span class="hidden md:inline-block text-white"> Categories</span>
                        <% end %> 
                    </li><li>
                        <%= link_to admin_orders_path, :class => "block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                            <%= icon('fa-solid', 'truck-fast', class: 'mr-3 text-white') %>
                            <span class="hidden md:inline-block text-white"> Orders</span>
                        <% end %> 
                    </li>
                    
                    <li>
                        <%= link_to destroy_admin_session_path, method: :delete, data: { "turbo-confirm": "Are you sure you want to sign out?" }, class: "block px-4 py-2 hover:rounded hover:bg-gray-700" do %>
                            <%= icon('fa-solid', 'sign-out', class: 'mr-3 text-white') %>
                            <span class="hidden md:inline-block text-white">Sign Out</span>
                        <% end %>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="p-8 w-full">
            <%= yield %>
        </div>
    </main>
  </body>
</html>
